<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@android:color/white"
    tools:context=".activity.MainActivity"
    tools:ignore="ContentDescription, HardcodedText, UsingOnClickInXml">

    <ImageView
        android:id="@+id/iv_take_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/ic_main_take_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_version"
        style="@style/WrapWrap"
        android:layout_marginTop="10dp"
        android:textColor="#333"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_take_pic"
        app:layout_constraintRight_toRightOf="@id/iv_take_pic"
        app:layout_constraintTop_toBottomOf="@id/iv_take_pic"
        tools:text="V1.0.0" />

    <ImageView
        android:id="@+id/iv_video"
        android:layout_width="33.3dp"
        android:layout_height="33.3dp"
        android:layout_marginEnd="53dp"
        android:src="@drawable/ic_main_record"
        app:layout_constraintBottom_toBottomOf="@id/iv_take_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_take_pic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_db_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="query"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_query_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="query filter" />
        <Button
            android:id="@+id/btn_query_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="query style" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
